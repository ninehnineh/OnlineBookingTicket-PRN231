@model IEnumerable<OnlineBookingTicket.Models.BookingVMs.BookingVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your ticket</h1>
@if (Model.Count() > 0)
{
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                CinemaHall
            </th>
            <th>
                StartTime
            </th>
            <th>
                SeatNumber
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var items in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => items.MovieShow.Movie.Title)
            </td>
            <td>
                    @items.MovieShow.CinemaHall.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => items.MovieShow.Starttime)
            </td>
                <td>
                    @foreach (var item in items.ShowSeats)
                    {
                        @Html.DisplayFor(modelItem => item.CinemaSeat.SeatNumber)
                        @if (!item.Equals(items.ShowSeats.Last()))
                        {
                            @Html.Raw(", ")
                        }
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => items.TotalPrice)
            </td>
            <td>
@*                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
}
    </tbody>
</table>
}
else
{
    <p class="alert alert-danger" style="">Empty</p>
}
