@using BusinessObject.Entities
@model IEnumerable<OnlineBookingTicket.Models.MovieShowVMs.ListMovieShowVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Movie Shows</h1>

<p>
    <a asp-action="CreateMovieShow">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starttime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endtime)
            </th>
            <th>
                Cinema Hall Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           
                      
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Starttime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endtime)
                </td>
                <td>
                    @foreach (var cinemaHall in ViewBag.CinemaHalls)
                    {
                        <p>@cinemaHall.Name</p>
                    }
                     
                   
                </td>
                <td>
                    @foreach (var movie in ViewBag.Movies)
                    {
                        <p>@movie.Title</p>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
