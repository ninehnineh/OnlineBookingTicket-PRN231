@model IEnumerable<BusinessObject.Entities.MovieShow>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h1>Movie Shows</h1>

<p>
    <a asp-action="CreateMovieShow">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Starttime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endtime)
            </th>
            <th>
                Price
            </th>
            <th>
                Cinema Hall Name
            </th>
            <th>
                Movie Title
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Date.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Starttime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endtime.TimeOfDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <select asp-for="@item.CinemaHallID" class="form-control" asp-items="ViewBag.CinemaHallID" disabled></select>
                </td>
                <td>
                    <select asp-for="@item.MovieID" class="form-control" asp-items="ViewBag.MovieID" disabled></select>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

