
<!DOCTYPE html>
<html>
<head>
    <title>Cinema Hall</title>
    <style>
        .center-screen-screen {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        .center-screen-table {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        hr {
            height: 50px;
            border-width: 0;
            background-color: #00A4BD;
        }
        .seat-button {
          border: 2px solid #ddd;
          background-color: #fff;
          color: #555;
          font-size: 16px;
          padding: 10px;
          margin: 5px;
          cursor: pointer;
        }

        .seat-button.selected {
          background-color: #007bff;
          color: #fff;
        }
    </style>
</head>
<body>
    <h1>Select Seats</h1>
    <hr>
    <div class="center-screen-screen">
        <h3>Screen</h3>
    </div>
    <form action="@Url.Action("BookMovieShow", "MovieShows")" method="post">
        <input type="hidden" name="movieShowId" value="@ViewBag.MovieShowId" />
        <input type="hidden" name="cinemaHallId" value="@ViewBag.cinemaHallId" />

        <table class="center-screen-table" action="">
            <tbody>
                    @for (int i = 1; i <= 50; i++)
                    {

                        if (i % 5 == 1)
                        {
                           @:<row>
                                @:<tr>
                
                        }
                        
                        <td>
                           <div>
                               <input type="checkbox" id="A@(i)" name="seatSelection" value="@i">
                               <label for="A@(i)">A@(i)</label>
                           </div>
                        </td>
                        if (i % 5 == 0 || i == 50)
                        {
                
                                @:</tr> 
                           @:</row>
                        }
                    }
            </tbody>
            <tfoot>
                <tr>
                    <td>
                        <label style="background-color:green" >A1:</label>
                        <label>Unavailable</label>
                    </td>
                    <td>
                        <label >A1:</label>
                        <label>Available</label>
                    </td>
                </tr>
            </tfoot>
        </table>
        <button type="submit" class="btn btn-primary">Book</button>
   </form>
</body>
</html>
@section Scripts{
    <script>
        $(document).ready(function() {
            for (let i = 1; i <= 50; i++) {
                getCinemaSeat(@(ViewBag.cinemaHallId), i).then(function(cinemaSeat) {
                    console.log(cinemaSeat);
                    if (cinemaSeat != null) {
                        $('#A' + i).prop('disabled', true);
                        $('#A' + i).closest('div').addClass('disabled-seat');
                    }
                }).catch(function(error) {
                    console.log('Error: ' + error);
                });
            }
        });

        function getCinemaSeat(cinemaHallID, seatNumber) {
            return new Promise(function(resolve, reject) {
                $.ajax({
                    url: 'https://localhost:7099/getcinemaseats/' + cinemaHallID,
                    type: 'GET',
                    dataType: 'json',
                    success: function(cinemaSeats) {
                        var cinemaSeat = cinemaSeats.find(cs => cs.seatNumber === seatNumber);
                        resolve(cinemaSeat);
                    },
                    error: function(xhr, textStatus, errorThrown) {
                        reject(errorThrown);
                    }
                });
            });
        }
    </script>
}
